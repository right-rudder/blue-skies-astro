---

const MULTI_ENGINE_INTEREST_URL = import.meta.env.MULTI_ENGINE_INTEREST_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;
const CP_ACCOUNT_RANDOM_ID = import.meta.env.CP_ACCOUNT_RANDOM_ID;

---

<form class="mx-auto max-w-xl py-20" id="enroll_form">
    <div>
      <div class="mt-2.5">
        <input
          type="text"
          name="first-name"
          id="first-name"
          autocomplete="given-name"
          placeholder="First Name"
          required
          class="block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full"
        />
      </div>
    </div>
    <div>
      <div class="mt-2.5">
        <input
          type="text"
          name="last-name"
          id="last-name"
          autocomplete="family-name"
          placeholder="Last Name"
          required
          class="block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full"
        />
      </div>
    </div>
    <div class="sm:col-span-2">
      <div class="mt-2.5">
        <input
          type="email"
          name="email"
          id="email"
          autocomplete="email"
          placeholder="Email Address"
          required
          class="block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full"
        />
      </div>
    </div>
    <p class="ohno">
      <label>
        Don't fill this out if you're human: <input name="confirm-email" />
      </label>
    </p>
    <div class="sm:col-span-2">
      <div class="relative mt-2.5">
        <input
          type="tel"
          name="phone"
          id="phone"
          autocomplete="tel"
          placeholder="Phone Number"
          required
          class="block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full"
        />
      </div>
    </div>
    <div class="mt-2.5">
        <label
          for="multi-engine-interest-message"
          class="block mb-0 py-2 font-extralight text-gray-900 hidden"
        >
          Message:
        </label>
        <textarea
          name="multi-engine-interest-message"
          id="multi-engine-interest-message"
          rows="4"
          placeholder="Message"
          class="block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full"
        ></textarea>
    </div>
    
    <div class="flex gap-x-4 sm:col-span-2 pt-5">
      <div class="flex h-6 items-center">
        <button
          type="button"
          id="terms-toggle"
          class="flex w-8 flex-none cursor-pointer rounded-full p-px ring-1 ring-inset ring-primary-900/5 transition-colors duration-200 ease-in-out focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900 bg-gray-200"
          role="switch"
          aria-checked="false"
          aria-labelledby="switch-1-label"
        >
          <span class="sr-only">
            I agree to terms & conditions provided by the company.
          </span>
          <span
            id="terms-thumb"
            class="h-4 w-4 transform rounded-full bg-black shadow-sm ring-1 ring-gray-900/50 transition duration-200 ease-in-out translate-x-0"
            aria-hidden="true"></span>
        </button>
        <input type="hidden" id="agree-terms" name="agree-terms" value="no" />
      </div>
      <label class="text-sm leading-6 text-black" id="switch-1-label">
        I agree to the <a
          href="/privacy-policy-terms-of-service"
          target="_blank"
          class="text-primary-700 hover:text-mariner-700 font-semibold"
          >Privacy Policy</a
        > and <a
          href="/privacy-policy-terms-of-service#terms-of-service"
          target="_blank"
          class="text-primary-700 hover:text-mariner-700 font-semibold"
          >Terms of Service</a
        > provided by the company. By providing my phone number, I agree to receive
        text notess from the business.
      </label>
    </div>

    <div class="mt-10">
        <button type="submit" id="submit-btn" class="w-fit mx-auto mt-6 mb-6 block rounded-md py-3 px-5 text-center text-3xl font-semibold leading-6 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600 text-sky-600 bg-sky-600 text-white ring-1 ring-inset ring-sky-200 hover:scale-105 duration-200">Join The Waitlist</button>
    </div>
</form>


