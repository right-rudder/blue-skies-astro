---
import type { ImageMetadata } from "astro";
import ImageComp from "./utils/ImageComp.astro";

const { data } = Astro.props;
---

<header
  class="relative isolate overflow-hidden min-h-[75vh] md:min-h-screen-5/6 text-accent-100 flex items-center justify-center"
>
  <ImageComp
    imagePath={data.imagePath}
    imageAlt={data.imageAlt}
    styles="absolute top-0 left-0 w-full h-full object-cover -z-20 animate-slow-zoom"
    quality={100}
   />

  <div
    class="absolute bg-gradient-to-b from-white/80 to-primary-900/70 w-full h-full z-0"
  >
  </div>
  {
    (data.headerH1 || data.headerH2) && (
      <div class="text-primary-8  00 text-center lg:text-left z-10 flex flex-col items-center gap-4 px-5 h-full lg:pt-16 justify-center">
        {data.headerH1 && (
          <h1
            class="text-2xl bg-gradient-to-br from-primary-900 via-primary-600 to-primary-800 bg-clip-text px-6 lg:px-24 font-sans2 md:text-5xl lg:text-6xl drop-shadow-md xl:text-7xl text-center font-black tracking-normal uppercase"
            set:html={data.headerH1}
          />
        )}
        {data.paragraph && (
          <p
            class="text-base lg:text-xl mt-3 font-semibold text-accent-100 tracking-wide drop-shadow-sm text-center max-w-3xl font-sans"
            set:html={data.paragraph}
          />
        )}
        {data.buttons && (
          <div class="mt-6 flex flex-wrap justify-center align-middle items-center gap-6 z-10">
            {data.buttons.map((btn:{name:string,link:string,primary:boolean}) => (
              <a
                href={btn.link}
                class={`${btn.primary ? "btn-primary" : "btn-accent"} w-full md:w-auto`}
              >
                {btn.name}
              </a>
            ))}
          </div>
        )}
      </div>
    )
  }
</header>