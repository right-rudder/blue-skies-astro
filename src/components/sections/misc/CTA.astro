---
// import type { ImageMetadata } from "astro:assets";
import RightSection from "@/components/ui/blocks/RightSection.astro";
import LeftSection from "@/components/ui/blocks/LeftSection.astro";

interface CTA {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  btnTwoExists?: boolean;
  btnTwoTitle?: string;
  btnTwoURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

interface Props {
  content: CTA;
}

const { content } = Astro.props;
---
{
  content.isRightSection ? (
    <RightSection
      title={content.title}
      subTitle={content.subTitle}
      single={content.single}
      imgOne={content.imgOne}
      imgOneAlt={content.imgOneAlt}
      imgTwo={content.imgTwo}
      imgTwoAlt={content.imgTwoAlt}
      btnExists={content.btnExists}
      btnTitle={content.btnTitle}
      btnURL={content.btnURL}
      btnTwoExists={content.btnTwoExists}
      btnTwoTitle={content.btnTwoTitle}
      btnTwoURL={content.btnTwoURL}
    />
  ) : (
    <LeftSection
      title={content.title}
      subTitle={content.subTitle}
      img={content.img}
      imgAlt={content.imgAlt}
      btnExists={content.btnExists}
      btnTitle={content.btnTitle}
      btnURL={content.btnURL}
      btnTwoExists={content.btnTwoExists}
      btnTwoTitle={content.btnTwoTitle}
      btnTwoURL={content.btnTwoURL}
    />
  )
}