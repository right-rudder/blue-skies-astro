---
const { content } = Astro.props;
---

<div class="">
  <div class="w-full px-60 py-12">
    <hr
      class="border-picton-blue-400 my-2 h-[1px] w-full border border-t-1 py-0"
    />
  </div>
  <div class="mx-auto grid max-w-7xl gap-20 px-6 lg:px-8 xl:grid-cols-3">
    <div class="max-w-xl">
      <p class="text-picton-blue-600 uppercase">
        {content.upperheading && content.upperheading}
      </p>
      <h2
        class="text-picton-blue-600 dark:text-picton-blue-400 text-3xl font-semibold tracking-tight text-pretty sm:text-4xl"
      >
        {content.title && content.title}
      </h2>
      <p class="mt-6 text-lg/8 text-gray-600 dark:text-slate-300">
        {content.description && content.description}
      </p>
    </div>
    <ul
      role="list"
      class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2"
    >
      {
        content.team &&
          content.team.map(
            (teamMember: {
              name: string;
              role: string;
              imagePath: string;
              imageAlt: string;
            }) => (
              <li>
                <div class="flex items-center gap-x-6">
                  <img
                    class="aspect-auto size-16 rounded-full object-cover"
                    src={teamMember.imagePath}
                    alt={teamMember.imageAlt}
                  />
                  <div>
                    <h3 class="text-base/7 font-semibold tracking-tight text-gray-900 dark:text-white">
                      {teamMember.name}
                    </h3>
                    <p class="text-sm/6 font-semibold text-sky-600 dark:text-sky-300">
                      {teamMember.role && teamMember.role}
                    </p>
                  </div>
                </div>
              </li>
            ),
          )
      }

      <!-- More people... -->
    </ul>
  </div>
</div>
