---
import ImageComp from "@/components/utils/ImageComp.astro";
import partnerImg1 from "@/images/product-image-1.avif";
import { parentPort } from "worker_threads";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";

// Define props from Astro
const { title, subTitle, partners, btnURL, btnTitle } = Astro.props;

interface Partner {
  icon: any;
  name?: string;
  href?: string;
  imagePath?: string;
  imageAlt?: string;
  btnURL?: string;
  btnTitle?: string;
  subTitle?: string;
  description?: string;
}

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  partners: Partner[];
  btnURL?: string;
  btnTitle?: string;
}
---

<section
  class="mx-auto flex max-w-[85rem] flex-col items-center justify-center bg-white px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full dark:bg-neutral-800"
>
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-2xl leading-tight font-bold text-balance text-neutral-800 uppercase sm:text-3xl dark:text-neutral-200"
    >
      <Fragment set:html={title} />
    </h2>
    {
      subTitle && (
        <p class="leading-tight text-pretty text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
  </div>
  <div
    class="max-w-8xl flex flex-col flex-wrap items-start justify-around gap-y-2 rounded-2xl p-10 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-12 lg:gap-y-12 dark:bg-white/[.075]"
  >
    <!-- Clients Group SVGs -->
    {
      partners.map((partner) => (
        <a
          href={partner.href}
          target="_blank"
          rel="noopener noreferrer"
          class="group hover:border-picton-blue-400 flex h-64 w-4/9 items-center justify-center overflow-hidden rounded-2xl border-2 bg-white transition-all duration-500 ease-out dark:bg-neutral-800"
        >
          <ImageComp
            imagePath={partner.imagePath}
            imageAlt={partner.imageAlt}
            quality={60}
            styles="max-w-56 shrink-0 px-4 py-4 group-hover:max-w-36 transition-all duration-500 ease-out flex items-center"
            loading="lazy"
          />

          <div class="flex max-w-0 flex-col items-start justify-center gap-1 px-4 py-6 text-neutral-600 opacity-0 transition-all duration-500 ease-out group-hover:max-w-full group-hover:opacity-100 dark:text-neutral-200">
            <h3 class="font-semibold text-neutral-800 uppercase dark:text-neutral-100">
              {partner.name}
            </h3>
            <p class="text-picton-blue-600 text-sm font-bold">
              {partner.subTitle}
            </p>
            <p class="text-xs">{partner.description}</p>
          </div>
        </a>
      ))
    }
  </div>

  <div
    class="mx-auto mb-6 w-full space-y-1 py-12 text-center sm:w-1/2 lg:w-1/3"
  >
    {btnTitle && <PrimaryCTA title={btnTitle} url={btnURL} />}
  </div>
</section>
