---
import { SITE } from "@data/constants";
import MainLayout from "@/layouts/MainLayout.astro";
import Enroll from "@/components/forms/FormEnroll.astro";
import MainSection from "@/components/ui/blocks/MainSection.astro";

const pageTitle: string = `Page Title | ${SITE.title}`;
const metaDescription = "Page Description";
const ogTitle = "Page Title | Blue Skies Above Flight School";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "",
    url: "",
    name: "About Blue Skies Above",
    description: metaDescription,
    isPartOf: {
      "@type": "WebSite",
      url: "",
      name: SITE.title,
      description: metaDescription,
    },
    inLanguage: "en-US",
  }}
>
  <MainSection
    title="Enroll at Blue Skies"
    subTitle="Fill out the form below and let's start flying! A Blue Skies Above team member will get in touch with you and walk you through the next steps on getting you in the air."
    btnExists={false}
    btnTitle="Contact Us"
    btnURL="/contact"
  />
  
  <Enroll />

</MainLayout>