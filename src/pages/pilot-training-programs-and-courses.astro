---
import MainLayoutEnhanced from "@/layouts/MainLayoutEnhanced.astro";
import { SITE } from "@data/constants";
import headerImg from "../assets/images/blue-skies-above-clouds-instrument-cfii-training.webp";
import CTA from "@/components/sections/misc/CTA.astro";
import FeaturesStarting from "@/components/sections/features/FeaturesStarting.astro";
import HeroSectionAlt from "@/components/sections/landing/HeroSectionAlt.astro";
import Courses from "@components/Courses.astro";
import AOSInit from "@/components/utils/AOSInit.jsx";

const pageTitle: string = `Pilot Training Programs Alabama | Comprehensive Flight Training Courses`;
const metaDescription =
  "Comprehensive pilot training programs in Alabama. Private pilot license, instrument rating, commercial pilot & CFI training with expert instructors, modern aircraft, and flexible scheduling at Blue Skies Above.";
const ogTitle =
  "Pilot Training Programs Alabama | Blue Skies Above Flight School";

// Breadcrumbs for training programs page
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Training Programs", url: "/pilot-training-programs-and-courses" },
];

// Service data for schema (training programs as services)
const serviceData = {
  name: "Professional Flight Training Programs",
  description: metaDescription,
  provider: {
    name: SITE.title,
    url: "https://flytheblueskies.com",
  },
  serviceType: "Flight Training",
  areaServed: ["Alabama", "Georgia", "Auburn", "Columbus", "Opelika"],
  hasOfferCatalog: [
    {
      name: "Private Pilot License (PPL)",
      description: "Your first step into aviation",
    },
    {
      name: "Instrument Rating (IR)",
      description: "Advanced weather flying capabilities",
    },
    {
      name: "Commercial Pilot License (CPL)",
      description: "Professional pilot certification",
    },
    {
      name: "Certified Flight Instructor (CFI)",
      description: "Teaching and instructing certification",
    },
  ],
};

const ctaEnroll = {
  isRightSection: false,
  title: "Your Aviation Career is Cleared for Takeoff",
  subTitle: `The sky is not the limit; it's your new office. With a global demand for pilots, there's never been a better time to start. <a href='/blog/flight-school-alabama-complete-guide-to-pilot-training' class='text-accent-500 hover:text-accent-600 font-medium underline'>Learn everything about flight school in Alabama</a> and begin your journey to becoming a professional pilot.`,
  single: true,
  img: headerImg,
  imgAlt: "Flight training syllabus materials",
  btnExists: true,
  btnTitle: "Enroll Now",
  btnURL: "/enroll-at-blue-skies",
};

const ctaDiscovery = {
  isRightSection: true,
  title: "Ready to Take the Controls?",
  subTitle:
    "Book a Discovery Flight and experience the thrill of flying firsthand. You'll take the controls with an expert instructor and see the world from a whole new perspective.",
  single: true,
  imgOne: headerImg,
  imgOneAlt: "Flight training syllabus materials",
  imgTwo: headerImg,
  imgTwoAlt: "Instructor with student at planning table",
  btnExists: true,
  btnTitle: "Book Now",
  btnURL: "/discovery-flights",
};

const videoWhyBecomePilot = {
  title: "Why I chose aviation as a career",
  description:
    "Learn what inspired Kate Roberts to pursue a career in aviation, and the passion that drives her journey. Discover how her experiences shaped her path and why she chose to turn her love for flying into a lifelong profession.",
};
---

<MainLayoutEnhanced
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  pageType="service"
  breadcrumbs={breadcrumbs}
  includeLocalBusiness={true}
  lang="en"
>
  <!-- <AOSInit is:client="load" /> -->
  <HeroSectionAlt
    title="Pilot Training Programs Alabama"
    subTitle=`Comprehensive flight training programs from <a href='/blog/private-pilot-license-alabama-complete-guide' class='text-accent-500 hover:text-accent-600 font-medium underline'>Private Pilot License</a> to Commercial Pilot certification. Expert instructors, modern aircraft, and flexible scheduling for aspiring pilots. Explore our <a href='/blog/instrument-rating-training-alabama-ifr-guide' class='text-accent-500 hover:text-accent-600 font-medium underline'>Instrument Rating training</a> for advanced capabilities.`
    btnTitle="Get Started"
    url="/discovery-flights"
  />
  <FeaturesStarting />
  <Courses />
  <CTA content={ctaDiscovery} />
</MainLayoutEnhanced>
