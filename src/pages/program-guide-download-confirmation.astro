---
import { SITE } from "@data/constants";
import MainLayout from "@/layouts/MainLayout.astro";

const pageTitle: string = `Program Guide Download | ${SITE.title}`;
const metaDescription =
  "Thank you for downloading our program guide. Learn more about Blue Skies Above's comprehensive flight training programs and take the next step in your aviation career.";
const ogTitle = "Program Guide Download | Blue Skies Above Flight School";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "",
    url: "",
    name: "About Blue Skies Above",
    description: metaDescription,
    isPartOf: {
      "@type": "WebSite",
      url: "",
      name: SITE.title,
      description: metaDescription,
    },
    inLanguage: "en-US",
  }}
/>
