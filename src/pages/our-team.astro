---
import LeadershipMembers from "@/components/sections/teams/LeadershipMembers.astro";
import TeamMembers from "@/components/sections/teams/TeamMembers.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

// Import Necessary imagesImages
import matthewB from "../assets/images/blue-skies-matt-800.webp";
import kateR from "../assets/images/kate-roberts.webp";
import ajD from "../assets/images/aj_dorizas.webp";
import Joe from "../assets/images/blue-skies-joe.webp";
import Paul from "../assets/images/blue-skies-paul.webp";
import Allison from "../assets/images/cfi-allison.webp";
import Bailey from "../assets/images/cfi-bailey.webp";
import Travasha from "../assets/images/cfi-travasha.webp";
import Lyle from "../assets/images/cfi-lyle.webp";
import Jaymes from "../assets/images/cfi-jaymes.webp";
import Connor from "../assets/images/cfi-connor.webp";
import Sammy from "../assets/images/a&p-sammy.webp";
