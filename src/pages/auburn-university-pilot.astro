---
import { SITE } from "@data/constants";
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@/components/ui/blocks/MainSection.astro";
import CTA from "@/components/sections/misc/CTA.astro";
import UniversityPilot from "@/components/UniversityPilot.astro";

import personWorking from "../assets/images/blue-skies-student-with-instructor.webp";
import beforeAfter from "../assets/images/blue-skies-cessna-in-clouds.webp";

const pageTitle: string = `Auburn Flight Training Programs | ${SITE.title}`;
const metaDescription =
  "Explore flight training programs near Auburn, from Private Pilot to CFI. Blue Skies Above offers flexible, FAA-approved paths to help Auburn students advance their aviation careers.";
const ogTitle =
  "Auburn Flight Training Programs | Blue Skies Above Flight School";

const ctaDiscovery = {
  isRightSection: true,
  title: "Start Your Flight Training Journey",
  subTitle:
    "Whether you're aiming for your Private Pilot License, Commercial rating, or CFI certification, Blue Skies Above offers the aircraft, instructors, and flexibility Auburn students need.\n\nGet ahead before the semester begins or take your next step with a focused training path. Talk to a Blue Skies team member today to get started.",
  single: true,
  imgOne: beforeAfter,
  imgOneAlt: "Flight training syllabus materials",
  imgTwo: personWorking,
  imgTwoAlt: "Instructor with student at planning table",
  btnExists: true,
  btnTitle: "Book Now",
  btnURL: "/discovery-flights",
};
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "",
    url: "",
    name: "About Blue Skies Above",
    description: metaDescription,
    isPartOf: {
      "@type": "WebSite",
      url: "",
      name: SITE.title,
      description: metaDescription,
    },
    inLanguage: "en-US",
  }}
>
  <MainSection
    title="Flight Training for Auburn Students"
    ;
    subTitle="Efficient programs, expert instructors, and a community that helps you soar."
    ;
    btnExists={true}
    btnTitle="Contact Us"
    btnURL="/contact"
  />

  <UniversityPilot />
  <CTA content={ctaDiscovery} />
</MainLayout>
