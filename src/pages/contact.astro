---
// Import the necessary components
import MainLayoutEnhanced from "@/layouts/MainLayoutEnhanced.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import ContactUsForm from "@/components/forms/FormContactUs.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact Blue Skies Above | Flight School Alabama Near Auburn & Columbus`;
const metaDescription =
  "Contact Blue Skies Above flight school in Lanett, Alabama. Questions about pilot training programs, discovery flights, or aviation careers? Serving Auburn, Columbus, Opelika & East Alabama.";
const ogTitle =
  "Contact Blue Skies Above Flight School | Alabama Pilot Training";

// Breadcrumbs for contact page
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Contact", url: "/contact" },
];
---

<MainLayoutEnhanced
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  pageType="contact"
  breadcrumbs={breadcrumbs}
  includeLocalBusiness={true}
  lang="en"
>
  <ContactSection />
</MainLayoutEnhanced>
