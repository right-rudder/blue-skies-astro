---
import { SITE } from "@data/constants";
import MainLayout from "@/layouts/MainLayout.astro";
import JoinTheTeam from "@/components/sections/JoinTheTeam.astro";
import MainSection from "@/components/ui/blocks/MainSection.astro";
import FeaturesGeneral from "@/components/sections/features/FeaturesGeneral.astro";
import LeftSection from "@/components/ui/blocks/LeftSection.astro";
import CTA from "@/components/sections/misc/CTA.astro";

import featureImage from "@images/blue-skies-private-pilot-checkride-pass-600.webp";

const pageTitle: string = `Page Title | ${SITE.title}`;
const metaDescription = "Page Description";
const ogTitle = "Page Title | Blue Skies Above Flight School";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "",
    url: "",
    name: "About Blue Skies Above",
    description: metaDescription,
    isPartOf: {
      "@type": "WebSite",
      url: "",
      name: SITE.title,
      description: metaDescription,
    },
    inLanguage: "en-US",
  }}
>
<MainSection
  title="Get Started on Your Pilot Career"
  subTitle="Put your commercial certificate to use, build flight hours, and inspire the next generation of aviators as a CFI at Blue Skies Above."
  btnExists={true}
  btnTitle="Contact Us"
  btnURL="/contact"
/>

<LeftSection
  title="Become a CFI with Blue Skies Above"
  subTitle="Take the next step in your aviation journey. Join our team of passionate flight instructors and gain the valuable experience needed to pursue your ATP certificate and beyond."
  img={featureImage}
  imgAlt="Flight instructor and student in a Cessna cockpit"
  btnExists={true}
  btnTitle="Apply Now"
  btnURL="#contact"
/>

<FeaturesGeneral
  title="Why CFIs Choose Blue Skies Above"
  subTitle="More than a flight school — we’re a launchpad for your aviation career. Join a team that values mentorship, efficiency, and building hours with purpose."
  src={featureImage}
  alt="Flight training in progress at Lanett Municipal Airport"
  features={[
    {
      heading: "Build Hours Toward Your ATP",
      content:
        "As a CFI at Blue Skies Above, you'll quickly accumulate flight time and gain experience in diverse flight scenarios, helping you meet the ATP certificate requirements faster.",
      svg: "rocket",
    },
    {
      heading: "Make an Impact from Day One",
      content:
        "Flight instructors are ambassadors of aviation. Share your passion and guide students through their own training, all while strengthening your own knowledge and skills.",
      svg: "plane",
    },
    {
      heading: "Teach with Confidence and Clarity",
      content:
        "Use the knowledge and techniques you mastered during your own training. With a structured curriculum and supportive environment, you'll feel equipped to deliver high-quality instruction.",
      svg: "checkCircle",
    },
    {
      heading: "Join a Supportive Aviation Community",
      content:
        "Our school thrives on collaboration, mentorship, and fun. From team-building flyouts to youth aviation days, you’ll be part of a vibrant, community-driven culture.",
      svg: "groups",
    },
  ]}
/>

  

 <JoinTheTeam />
</MainLayout>