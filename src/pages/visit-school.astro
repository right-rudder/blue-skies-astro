---
import { SITE } from "@data/constants";
import MainLayout from "@/layouts/MainLayout.astro";
import VisitSchoolForm from "@/components/forms/FormVisitSchool.astro";

const pageTitle: string = `Visit Our Flight School | ${SITE.title}`;
const metaDescription =
  "Schedule a visit to Blue Skies Above Flight School in Lanett, Alabama. Tour our facilities, meet our instructors, and see our fleet of training aircraft at Lanett Municipal Airport (7A3).";
const ogTitle = "Visit Our Flight School | Blue Skies Above Flight School";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "",
    url: "",
    name: "About Blue Skies Above",
    description: metaDescription,
    isPartOf: {
      "@type": "WebSite",
      url: "",
      name: SITE.title,
      description: metaDescription,
    },
    inLanguage: "en-US",
  }}
>
  <VisitSchoolForm />
</MainLayout>
